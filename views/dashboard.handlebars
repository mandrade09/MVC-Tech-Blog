{{> header}}

<main>
    <h1>Dashboard</h1>
    <a href="/post/new">Create New Post</a>
    <div>
        {{#each posts}}
            <article>
                <h2><a href="/post/{{this.id}}">{{this.title}}</a></h2>
                <a href="/post/edit/{{this.id}}">Edit</a>
                <form action="/posts/{{this.id}}" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit">Delete</button>
                </form>
            </article>
        {{/each}}
    </div>
</main>
